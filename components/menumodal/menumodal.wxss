/* components/menumodal/menumodal.wxss */
.modal {
  position: fixed;
  z-index: 20;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
}

.buttons {
  position: absolute;
  bottom: 93rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
}
.modal-button,
.modal-image {
  width: 88rpx !important;
  height: 88rpx !important;
  padding: 0;
  border-radius: 50%;
}

.modal-button:not(:last-child) {
  margin-bottom: 40rpx;
}
